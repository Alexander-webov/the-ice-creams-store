datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")   ← закомментируй или удали, если не используешь
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

model Product {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Float
  rating      Float    @default(0)
  imageUrl    String
  category    String

  createdAt   DateTime @default(now())
}


model Posts {
  id          String   @id @default(cuid())
  title       String
  description String
  imageUrl    String
  category    String
  whoPostetd  String
  createdAt   DateTime @default(now())

  content     String?
}


model ContactForm {
  id          String   @id @default(cuid())
  firstName   String
  lastName    String
  email    String
  phone    String
  message  String
  createdAt   DateTime @default(now())

}

